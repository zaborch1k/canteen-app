{
    "swagger": "2.0",
    "info": {
        "description": "Internal API for canteen web app",
        "title": "CanteenApp API",
        "contact": {},
        "license": {
            "name": "Apache 2.0"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "paths": {
        "/api/auth/login": {
            "post": {
                "description": "Аутентифицирует существующего пользователя, устанавливает refresh токен в cookie и возвращает access токен в теле ответа.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Аутентификация пользователя",
                "parameters": [
                    {
                        "description": "Данные для входа",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Пользователь успешно аутентифицирован",
                        "schema": {
                            "$ref": "#/definitions/api.AccessTokenResponse"
                        }
                    },
                    "400": {
                        "description": "Данные невалидны",
                        "schema": {
                            "$ref": "#/definitions/api.ValidationErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Логин/пароль некорректен",
                        "schema": {
                            "$ref": "#/definitions/api.InvalidCredentialsErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "schema": {
                            "$ref": "#/definitions/api.InternalServerErrorResponse"
                        }
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "description": "Инвалидирует refresh токен в cookie",
                "tags": [
                    "auth"
                ],
                "summary": "Выход из системы",
                "responses": {
                    "204": {
                        "description": "Успешный выход, тело ответа отсутствует"
                    }
                }
            }
        },
        "/api/auth/refresh": {
            "get": {
                "description": "Проверяет refresh токен, установленный в cookie, и возврашает в теле ответа новый access токен",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Обновление access токена",
                "responses": {
                    "200": {
                        "description": "access токен успешно обновлен",
                        "schema": {
                            "$ref": "#/definitions/api.AccessTokenResponse"
                        }
                    },
                    "401": {
                        "description": "Refresh токен не установлен или некорректен",
                        "schema": {
                            "$ref": "#/definitions/api.RefreshTokenErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "schema": {
                            "$ref": "#/definitions/api.InternalServerErrorResponse"
                        }
                    }
                }
            }
        },
        "/api/auth/register": {
            "post": {
                "description": "Создает нового пользователя, устанавливает refresh токен в cookie и возвращает access токен в теле ответа.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Регистрация пользователя",
                "parameters": [
                    {
                        "description": "Данные для регистрации",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.RegisterRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Пользователь успешно зарегистрирован",
                        "schema": {
                            "$ref": "#/definitions/api.AccessTokenResponse"
                        }
                    },
                    "400": {
                        "description": "Данные невалидны",
                        "schema": {
                            "$ref": "#/definitions/api.ValidationErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Пользователь с таким логином уже существует",
                        "schema": {
                            "$ref": "#/definitions/api.LoginInUseErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Внутренняя ошибка сервера",
                        "schema": {
                            "$ref": "#/definitions/api.InternalServerErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.AccessTokenResponse": {
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
            }
        },
        "api.InternalServerErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "internal server error"
                }
            }
        },
        "api.InvalidCredentialsErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "invalid credentials"
                }
            }
        },
        "api.InvalidRequestErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "invalid request"
                }
            }
        },
        "api.LoginInUseErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "login already in use"
                }
            }
        },
        "api.LoginRequest": {
            "type": "object",
            "required": [
                "login",
                "password"
            ],
            "properties": {
                "login": {
                    "type": "string",
                    "maxLength": 50,
                    "example": "the_real_slim_shady"
                },
                "password": {
                    "type": "string",
                    "maxLength": 100,
                    "example": "password1234"
                }
            }
        },
        "api.RefreshTokenErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "refresh token error"
                }
            }
        },
        "api.RegisterRequest": {
            "type": "object",
            "required": [
                "login",
                "name",
                "password",
                "role",
                "surname"
            ],
            "properties": {
                "login": {
                    "type": "string",
                    "maxLength": 50,
                    "minLength": 2,
                    "example": "the_real_slim_shady"
                },
                "name": {
                    "type": "string",
                    "maxLength": 100,
                    "example": "Slim"
                },
                "password": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 8,
                    "example": "password1234"
                },
                "role": {
                    "type": "string",
                    "example": "admin"
                },
                "surname": {
                    "type": "string",
                    "maxLength": 100,
                    "example": "Shady"
                }
            }
        },
        "api.ValidationErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "validation error"
                }
            }
        }
    }
}